# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=sqlite:///./data/interview_buddy.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/interview_buddy

# Application Configuration
APP_NAME=Interview Buddy
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Session Configuration
DEFAULT_SESSION_DURATION=3600  # seconds (1 hour)
DEFAULT_TOKEN_BUDGET=50000
MAX_MESSAGE_LENGTH=5000

# Rate Limiting
RATE_LIMIT_PER_SESSION=100  # requests per session
GLOBAL_RATE_LIMIT=1000  # requests per hour

# Timer Configuration
TIMER_UPDATE_INTERVAL=1  # seconds
TIMER_WARNING_THRESHOLDS=25,10,5  # percentage thresholds

# Security
SECRET_KEY=change_this_to_a_random_secret_key
SESSION_TIMEOUT=86400  # seconds (24 hours)

# Frontend Configuration
AUTO_REFRESH_INTERVAL=2  # seconds
ENABLE_MARKDOWN_RENDERING=True
ENABLE_CODE_HIGHLIGHTING=True

